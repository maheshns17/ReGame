<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_paybg"
        android:orientation="vertical"
        tools:context="pmap.com.dealbuysell_regame.activities.ReGameActivity">



        <TextView
            android:layout_width="500dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="To play ReGame!! pay using below QR codes and enter your payment Reference number"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_monthly"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="#2366d1"
                android:text="PAY"
                android:textAlignment="gravity"
                android:textColor="#f4f4f4" />

            <Button
                android:id="@+id/btn_yearly"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="#1628f7"
                android:text="â‚¹30/-"
                android:textAlignment="gravity"
                android:textColor="#f4f4f4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edt_reference_no"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner"
                android:hint="Enter your reference number"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"
                android:textColor="#111111" />

            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/btn_submit_reference_no"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#07ea29"
                android:text="SUBMIT"
                android:textAlignment="gravity"
                android:textColor="#f4f4f4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">


            <ImageView

                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"

                android:src="@drawable/img_qrpaytm" />

            <ImageView

                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:src="@drawable/img_qrbhim" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:orientation="horizontal">

            <Button

                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="@drawable/img_paytm" />

            <Button

                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="@drawable/img_bhim"
                android:textAlignment="gravity"
                android:textColor="#f4f4f4" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>
